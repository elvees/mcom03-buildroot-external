config BR2_PACKAGE_RTL_TEST_STOP
	bool "rtl-test-stop"
	select BR2_TARGET_ROOTFS_INITRAMFS
	help
	  Provides a test stop marker for a RTL sumulator. The test will
	  be successfuly completed if the RTL test observes a magic
	  value in a magic RAM address. The package creates a tiny
	  initramfs and replaces an initramfs which is generated by the
	  Buildroot.
	  This package should be used only on RTL.

if BR2_PACKAGE_RTL_TEST_STOP
config BR2_PACKAGE_RTL_TEST_STOP_MAGIC_ADDR
	string "magic address"
	default "0xF0001FF0"
	help
	  RAM address where the RTL test expects a magic value.

config BR2_PACKAGE_RTL_TEST_STOP_MAGIC_VALUE
	string "magic value"
	default "0x12345678"
	help
	  Value which will be written to a magic address when
	  the Linux will start userspace.
endif
